{
    "name": "beacon/youtube",
    "type": "project",
    "description": "Application for scraping YouTube caption data.",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.3",
        "google/apiclient": "^2.18.2",
        "symfony/console": "^7.2.1",
        "symfony/dotenv": "^7.2",
        "symfony/flex": "^2.4.7",
        "symfony/framework-bundle": "^7.2.3",
        "symfony/runtime": "^7.2.3",
        "symfony/yaml": "^7.2.3"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.62"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Beacon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beacon\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "google/apiclient-services": [
            "YouTube"
        ],
        "symfony": {
            "allow-contrib": false,
            "require": "^7",
            "docker": false
        }
    }
}
